@startuml
!include style.puml

box UI UI_COLOR_T1
participant ":MainWindow" as MainWindow UI_COLOR
participant ":StatsWindow" as StatsWindow UI_COLOR
end box

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":SpendingBookParser" as SpendingBookParser LOGIC_COLOR
participant ":StatsCommandParser" as StatsCommandParser LOGIC_COLOR
participant "d:StatsCommand" as StatsCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
end box

[-> MainWindow : isShowStats = True
activate MainWindow

MainWindow -> LogicManager : getStatsData()
activate LogicManager

LogicManager -> SpendingBookParser : parseCommand("stats d/01/01/2019 d/07/01/2019")
activate SpendingBookParser

create StatsCommandParser
SpendingBookParser -> StatsCommandParser
activate StatsCommandParser

StatsCommandParser --> SpendingBookParser
deactivate StatsCommandParser

SpendingBookParser -> StatsCommandParser : parse("01/01/2019, 07/01/2019")
activate StatsCommandParser

create StatsCommand
StatsCommandParser -> StatsCommand
activate StatsCommand

StatsCommand --> StatsCommandParser
deactivate StatsCommand

StatsCommandParser --> SpendingBookParser
deactivate StatsCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
StatsCommandParser -[hidden]-> SpendingBookParser
destroy StatsCommandParser

SpendingBookParser --> LogicManager
deactivate SpendingBookParser

LogicManager -> StatsCommand : getStatsData()
activate StatsCommand

StatsCommand -> Model : getFilteredSpendingList(predicate)

Model -> StatsCommand
deactivate Model

StatsCommand -> LogicManager
deactivate StatsCommand

LogicManager --> MainWindow
deactivate LogicManager

MainWindow -> StatsWindow: loadData()
activate StatsWindow

StatsWindow --> MainWindow
deactivate StatsWindow

[<--MainWindow
deactivate MainWindow

@enduml
