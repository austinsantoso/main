<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.Hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="120" GridPane.columnIndex="0">
            <HBox alignment="CENTER_LEFT">
                <VBox alignment="CENTER_LEFT" prefWidth="10" prefHeight="120">
                    <Label fx:id="id" alignment="TOP_LEFT" contentDisplay="TOP" styleClass="cell_big_label">
                        <minWidth>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                    </Label>
                </VBox>
                <VBox alignment="CENTER_LEFT"  prefHeight="120" prefWidth="300">
                    <Label fx:id="message" alignment="CENTER_LEFT" styleClass="cell_big_label" wrapText="true" text="\$message">
                    </Label>
                </VBox>
                <VBox alignment="CENTER_LEFT" prefHeight="110" prefWidth="100">
                    <Label fx:id="deadline" alignment="CENTER_RIGHT" styleClass="cell_small_label" wrapText="true" text="\$deadline">
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </GridPane>
</HBox>
